/* pages/searchResult/searchResult.wxss */
.empty {
  position: relative;
  top:300rpx;
  width: 100%;
  text-align: center;
  color:rgb(85, 83, 83);
  margin: auto;
}
.play {
  margin: 5%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.meaning {
  font-size: large;
  font-weight: 600;
  display: flex;
  align-items: center;
}
.volume {
  margin-left: 4%;
  width: 7%;
  height: 100%;
}
.shine {
  animation: shine var(--speed) infinite;
}

@keyframes shine {
  0% {opacity: 100%;}
  50% {opacity: 0;}
  100% {opacity: 100%;}
}