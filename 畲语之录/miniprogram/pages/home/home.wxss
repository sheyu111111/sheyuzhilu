/* pages/home/home.wxss */
.search {
  display: flex;
  align-items: center;

  width: 692rpx;
  height: 70rpx;
  margin: 30rpx;

  background-color: white;
  border-radius: 30rpx;
}
.search-icon {
  margin: 3%;
  width: 6%;
  height: 60%;
}
.search-content {
  width: 80%;
  height: 90%;
  text-align: center;
  font-size: large;
}
.swiper-box {
  margin-left: 30rpx;
  width: 692rpx;
  height: 350rpx;
}
.wx-swiper-dots .wx-swiper-dot-active {
  width: 32rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background-color: #c94848;
}
.swiper-box swiper {
  width: 100%;
  height: 100%;
}
.local-image {
  border-radius: 10rpx;
  width: 692rpx;
  height: 350rpx;
}
.active-part {
  display: grid;
  grid-template-columns: auto auto;
  grid-column-gap: 30rpx;
  grid-row-gap: 30rpx;
  padding: 0 30rpx;
  margin-top: 30rpx;
}
.active {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 340rpx;
  background-color: white;
  border: #e5e5e5 solid 2rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.active-image {
  width: 280rpx;
  height: 280rpx;
  border-radius: 10rpx;
  border: #f5f5f5 solid 2rpx;
}